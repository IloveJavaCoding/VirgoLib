<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".mainbody.activity.selfcom.ImageAnimActivity">

    <com.nepalese.virgolib.widget.image.BaseImageView
        android:id="@+id/base_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!--导入按钮-->
    <ImageButton
        android:layout_width="@dimen/img_30"
        android:layout_height="@dimen/img_30"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/margin_10"
        android:src="@mipmap/icon_dir"
        android:scaleType="centerCrop"
        android:background="@drawable/img_button_transprant"
        android:onClick="onSelectDir"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".mainbody.activity.selfcom.ImageAnimActivity">

    <!--导入按钮-->
    <com.nepalese.virgolib.widget.image.BaseImageView
        android:id="@+id/base_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageButton
        android:id="@+id/ib_select_dir"
        android:layout_width="@dimen/img_30"
        android:layout_height="@dimen/img_30"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_statue"
        android:background="@drawable/img_button_transprant"
        android:onClick="onSelectDir"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_dir" />
</RelativeLayout>